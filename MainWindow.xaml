<Window x:Name="Window1" x:Class="Homeworks_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homeworks_WPF"
        mc:Ignorable="d"
        MinHeight="512" MinWidth="720"
        Title="MainWindow" Height="1024" Width="1440">
    <Grid>
        <Image x:Name="LogInBG" Height="Auto" Width="Auto" Source="/Log In.png" Stretch="Fill"/>
        <StackPanel>
            <Label x:Name="LogInText" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Log In" Foreground="White" FontSize="48" FontFamily="Comic Sans MS" Margin="0,178,0,0"/>
            <Label x:Name="EmailText" Content="Email" FontFamily="Comic Sans MS" Foreground="White" FontSize="24" Width="507" Margin="0,52,0,0"/>
            <Border x:Name="EmailBorder" BorderBrush="White" CornerRadius="15" BorderThickness="4" HorizontalAlignment="Center" Width="507" Height="70">
                
            </Border>
            <Label x:Name="PasswordText" Content="Password" FontFamily="Comic Sans MS" Foreground="White" FontSize="24" Width="507" Margin="0,27,0,0"/>
            <Border x:Name="PasswordBorder" BorderBrush="White" CornerRadius="15" BorderThickness="4" HorizontalAlignment="Center" Width="507" Height="70">
                
            </Border>
        </StackPanel>
    </Grid>
</Window>
